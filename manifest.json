{
  "name": "Rate my UBC",
  "short_name": "Rate my UBC",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Tejbir Singh Sodhan",
  "description": "View RateMyProfessor ratings of the instructor in the UBC course selection page",
  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://courses.students.ubc.ca/cs/main?pname=subjarea&tname=subjareas*"
      ],
      "css": ["bootstrap.min.css", "display.css"],
      "js": [
        "js/jquery.min.js",
        "js/bootstrap.min.js",
        "js/background.js",
        "js/helpers.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "https://courses.students.ubc.ca/cs/main?pname=subjarea&tname=subjareas*",
    "http://www.ratemyprofessors.com/*"
  ]
}